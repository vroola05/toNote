{
    "compilerOptions": {
        "target": "es6",
        "lib": ["es2015", "es6"],
        "rootDir": "src",
        "outDir": "dist",
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "strict": false,
        "declaration": true,
        "sourceMap": true,
        "inlineSources": true,
        "types": ["node"]
    },
    "include": [
        "src/**/*"
    ]
}